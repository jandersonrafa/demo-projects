{
    "listeners": [
        {
            "address": "0.0.0.0",
            "port": 3000,
            "https": false
        }
    ],
    "app": {
        "threads_num": 12,
        "max_connection_num_per_epoll": 10000,
        "load_config": true
    },
    "db_clients": [
        {
            "name": "default",
            "rdbms": "postgresql",
            "host": "postgres",
            "port": 5432,
            "dbname": "benchmark",
            "user": "cpp_drogon_user",
            "password": "cpp_drogon_pass",
            "is_fast": true,
            "connection_number": 10,
            "filename": ""
        }
    ],
    "run_as_daemon": false,
    "relaunch_on_error": false,
    "use_sendfile": false,
    "use_gzip": false,
    "static_files": {
        "types": [
            "*"
        ],
        "search_paths": [
            "./static"
        ],
        "enable_last_modified": true
    },
    "max_request_size": 10000000,
    "max_request_body_size": 10000000,
    "idle_connection_timeout": 60,
    "keepalive_requests": 1000,
    "pipeline_size": 1000,
    "gzip_static": true,
    "client_max_body_size": "1M",
    "client_body_timeout": 60,
    "client_header_timeout": 60,
    "send_timeout": 60,
    "output_buffer_size": 8192
}