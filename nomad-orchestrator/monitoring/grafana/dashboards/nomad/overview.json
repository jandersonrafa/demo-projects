{
    "title": "Nomad Cluster Overview",
    "tags": [
        "nomad",
        "infrastructure"
    ],
    "schemaVersion": 39,
    "version": 1,
    "refresh": "10s",
    "templating": {
        "list": []
    },
    "panels": [
        {
            "type": "stat",
            "title": "Running Jobs",
            "gridPos": {
                "h": 4,
                "w": 6,
                "x": 0,
                "y": 0
            },
            "targets": [
                {
                    "expr": "sum(nomad_nomad_job_status_running)"
                }
            ],
            "options": {
                "colorMode": "value",
                "graphMode": "none"
            }
        },
        {
            "type": "stat",
            "title": "Running Allocations",
            "gridPos": {
                "h": 4,
                "w": 6,
                "x": 6,
                "y": 0
            },
            "targets": [
                {
                    "expr": "sum(nomad_client_allocations_running)"
                }
            ],
            "options": {
                "colorMode": "value",
                "graphMode": "none"
            }
        },
        {
            "type": "stat",
            "title": "Total Nodes",
            "gridPos": {
                "h": 4,
                "w": 6,
                "x": 12,
                "y": 0
            },
            "targets": [
                {
                    "expr": "count(nomad_client_host_cpu_total)"
                }
            ],
            "options": {
                "colorMode": "value",
                "graphMode": "none"
            }
        },
        {
            "type": "stat",
            "title": "Failed Allocations (Last 1h)",
            "gridPos": {
                "h": 4,
                "w": 6,
                "x": 18,
                "y": 0
            },
            "targets": [
                {
                    "expr": "sum(increase(nomad_client_allocations_failed[1h]))"
                }
            ],
            "options": {
                "colorMode": "value",
                "graphMode": "area"
            }
        },
        {
            "type": "timeseries",
            "title": "CPU Usage per Node",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 4
            },
            "targets": [
                {
                    "expr": "nomad_client_host_cpu_total - nomad_client_host_cpu_idle",
                    "legendFormat": "{{node_id}}"
                }
            ],
            "options": {
                "tooltip": {
                    "mode": "multi"
                }
            }
        },
        {
            "type": "timeseries",
            "title": "Memory Usage per Node",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 12,
                "y": 4
            },
            "targets": [
                {
                    "expr": "nomad_client_host_memory_used / 1024 / 1024",
                    "legendFormat": "{{node_id}}"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "mbytes"
                }
            }
        }
    ]
}